<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Banner Intro -->
    <ImageView
        android:id="@+id/imgIntroBanner"
        android:layout_width="0dp"
        android:layout_height="470dp"
        android:src="@drawable/banner"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- App Title -->
    <TextView
        android:id="@+id/tvIntroTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Crab Compass"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#d35844"
        app:layout_constraintTop_toBottomOf="@id/imgIntroBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvIntroSubtitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Discover Maryland destinations and activities tailored to your budget, season, and interests. View maps, see like scores, and “Like” the places you enjoy. Perfect for first-time Maryland visitors."
        android:textSize="18sp"
        android:textColor="#444444"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvIntroTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Explore Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExplore"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Explore More"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#d35844"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntroSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
